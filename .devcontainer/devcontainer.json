{
    //nomeie ESSA configuração
    "name": "Codespace for skills!",
    //Use a imagem base do codespace
    "image": "mcr.microsoft.com/vscode/devcontainers/universal:latest",

    "remoteUser": "codespace",
    "overrideCommand": false,
    "customizations": {
        "vscode": {
            "extensions": [
                "Github.copilot"
            ]
        },
        "codespaces": {
            "openFiles": [
                "codespace.md"
            ]
        }
    },
    "postCreateCommand": "echo '# escrevendo código após a criação do codespace' >> codespace.md"

}